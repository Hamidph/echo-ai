# Production Environment Configuration
# Copy this file to .env in production and fill in the values

# Application
APP_NAME="Probabilistic LLM Analytics Platform"
ENVIRONMENT="production"
DEBUG=false

# Security (CRITICAL: Change these in production!)
SECRET_KEY=  # Generate with: openssl rand -hex 32
SENTRY_DSN=  # Your Sentry DSN for error tracking

# Database (Cloud SQL)
POSTGRES_USER=ai_visibility
POSTGRES_PASSWORD=  # Strong password for production
POSTGRES_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME  # Cloud SQL Unix socket
POSTGRES_PORT=5432
POSTGRES_DB=ai_visibility_db

# Redis (Memorystore)
REDIS_HOST=  # Your Memorystore Redis IP
REDIS_PORT=6379
REDIS_PASSWORD=  # Redis password

# Probabilistic Engine
DEFAULT_ITERATIONS=10
MAX_ITERATIONS=100
CONFIDENCE_LEVEL=0.95

# LLM API Keys (Store in Google Secret Manager recommended)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Celery
CELERY_BROKER_URL=  # Redis URL
CELERY_RESULT_BACKEND=  # Redis URL
