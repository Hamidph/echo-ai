# Probabilistic LLM Analytics Platform - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="Probabilistic LLM Analytics Platform"
APP_VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=true

# API Configuration
API_V1_PREFIX="/api/v1"

# Security
SECRET_KEY="change-this-to-a-secret-key-in-production-use-openssl-rand-hex-32"
SENTRY_DSN=  # Optional: Sentry DSN for error tracking (production)

# PostgreSQL Configuration
POSTGRES_USER=ai_visibility
POSTGRES_PASSWORD=ai_visibility_secret
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_visibility_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret
REDIS_DB=0

# Probabilistic Engine Configuration
# Innovation: These control the Monte Carlo simulation parameters
DEFAULT_ITERATIONS=10
MAX_ITERATIONS=100
CONFIDENCE_LEVEL=0.95

# LLM Provider API Keys
# Fill these in with your actual API keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Celery Configuration (optional - defaults to Redis URL)
# CELERY_BROKER_URL=redis://:redis_secret@localhost:6379/0
# CELERY_RESULT_BACKEND=redis://:redis_secret@localhost:6379/0

